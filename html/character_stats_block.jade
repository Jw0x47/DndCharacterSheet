div.row
  div.container.col-md-4
    div.abilityList
      table.table
        thead
          td stat
          td value
          td modifier
        tbody
          tr.noPadding(ng-repeat="ability in char.abilities")
            td {{ ability.name }}
            td
              input(id="{{ ability.name }}" ng-model="modifier" ng-change="abilityScoreUpdate()" value="{{ ability.score }}")
            td {{ ability.modifier }}
