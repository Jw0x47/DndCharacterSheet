div.characterSavesBlock
  div.col-sm-6.panel
    table.table
      thead
        td
          label Save
        td
          label Total
        td
          label Base
        td
          label Ability Mod
        td
          label Misc Mod
      tbody
        tr.noPadding(ng-repeat="save in char.saves track by save.name")
          // td Save
          td
            label {{ save.name }}
          // td Total
          td {{ save.total }}
          // td Base Save
          td {{ save.base }}
          // td Ability Modifier
          td(id="save.ability") {{ getAbilityModifier(save.ability) }}
          // composite modifiers
          td {{ getSaveCompositeModifier(save.modifiers) }}
    button.btn.btn-sm.btn-warning Edit
